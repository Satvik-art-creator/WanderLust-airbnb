<% layout("layouts/boilerplate.ejs") %>
<script>
  const mapBoxToken = "<%=process.env.MAPBOX_TOKEN%>" ;
  const listInfo = <%-JSON.stringify(listData)%> ;
</script>

<div class="showList mt-3">
  <h1><%= listData.title %></h1>

  <div class="card cardShow mt-3">
    <img
      src="<%= listData.image.url %>"
      class="card-img-top"
      alt="Listing image"
      style="height: 35vh; width: 50vw"
    />
    <div class="card-body">
      <h6 class="card-title"><%= listData.description %></h6>
      <br />
      <p class="card-subtitle text-body-secondary">
        &#8377; <%= listData.price.toLocaleString("en-IN") %> /night
      </p>
      <p class="mb-0 card-text"><%= listData.location %></p>
      <p class="card-text"><%= listData.country %></p>
      <p class="card-text">
        <strong>Owned by: </strong> <i><%= listData.owner.name %></i>
      </p>
    </div>

    <% if(currUser && currUser._id.equals(listData.owner._id)) { %>
    <div class="btns">
      <form
        method="GET"
        action="/listings/<%=listData._id%>/edit"
        class="d-inline-block"
      >
        <button type="submit" class="btn btn-danger margin">Edit</button>
      </form>

      <form
        method="POST"
        action="/listings/<%=listData._id%>/?_method=DELETE"
        class="d-inline-block"
      >
        <button type="submit" class="btn btn-dark">Delete</button>
      </form>
    </div>
    <% } %>
    <br />

    <% if(listData.reviews.length) { %>
    <hr />
    <section class="d-flex row">
      <h1 class="mb-3">Reviews</h1>
      <br />
      <% for(review of listData.reviews) { %>
      <div class="card col-md-5 mt-2 ms-3" style="margin: 0 auto">
        <div class="card-body">
          <h5 class="card-title">@<%=review.author.username%></h5>
          <p class="starability-result card-subtitle" style="font-size: 10px;" data-rating="<%=review.rating%>"></p>
          <p class="card-text mt-3"><%=review.comment%></p>

          <% if(currUser && review.author.equals(currUser._id)) {%>
          <form
            method="POST"
            action="/listings/<%=listData._id%>/reviews/<%=review._id%>?_method=DELETE"
          >
            <button class="btn btn-sm btn-dark mb-1">Delete</button>
          </form>
          <%}%>
        </div>
      </div>
      <%}%>
    </section>
    <%}%>

    <% if(currUser) { %>
    <hr />
    <br />

    <div>
      <h2>Leave a Review!!</h2>

      <form
        method="POST"
        action="/listings/<%=listData._id%>/reviews"
        class="mt-2 row needs-validation"
        novalidate
      >
        <div class="col-12">
          <label for="rating" class="form-label">Rating</label>
          <fieldset class="starability-slot">
            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
            <label for="first-rate3" title="Average">3 stars</label>
            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
        </div>
        <br />
        <div class="col-12">
          <label for="comment" class="form-label mt-2">Comment</label>
          <textarea
            type="text"
            name="review[comment]"
            id="comment"
            class="form-control"
            placeholder="Leave a comment"
            required
          ></textarea>
          <div class="invalid-feedback">Enter a valid comment</div>
        </div>
        <br />
        <div class="col">
          <button type="submit" class="btn btn-outline-success mt-3">
            Add review
          </button>
        </div>
      </form>
    </div>
    <br />
    <%}%>
    <div>
      <h1>Where you'll be</h1>
      <div id="map" class="mt-3"></div>
    </div>
    <br />
  </div>
</div>

<script src="/js/map.js"></script>

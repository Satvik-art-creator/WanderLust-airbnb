<% layout("layouts/boilerplate.ejs") %>
<div class="filters">
  <div class="filter">
    <i class="fa-solid fa-fire"></i>
    <p>Trending</p>
  </div>

  <div class="filter">
    <i class="fa-solid fa-bed"></i>
    <p>Rooms</p>
  </div>

  <div class="filter">
    <i class="fa-solid fa-mountain-city"></i>
    <p>Iconic Cities</p>
  </div>

  <div class="filter">
    <i class="fa-solid fa-mountain"></i>
    <p>Mountains</p>
  </div>

  <div class="filter">
    <i class="fa-solid fa-person-swimming fa-flip-horizontal"></i>
    <p>Amazing Pools</p>
  </div>

  <div class="filter">
    <i class="fa-solid fa-campground"></i>
    <p>Camping</p>
  </div>

  <div class="filter">
    <i class="fa-solid fa-cow"></i>
    <p>Farms</p>
  </div>

  <div class="filter">
    <i class="fa-solid fa-snowflake"></i>
    <p>Arctic</p>
  </div>

  <div class="filter">
    <i class="fa-solid fa-igloo"></i>
    <p>Domes</p>
  </div>

  <div class="filter">
    <i class="fa-solid fa-sailboat"></i>
    <p>Boats</p>
  </div>

  <div class="taxTogg">
    <div class="form-check form-switch form-check-reverse">
      <input
        class="form-check-input"
        id="switch"
        type="checkbox"
        role="switch"
        id="flexSwitchCheckDefault"
      />
      <label class="form-check-label" for="flexSwitchCheckDefault"
        >Display total after taxes</label
      >
    </div>
  </div>
</div>

<div class="row row-cols-lg-4 row-cols-md-2 row-cols-sm-12 mt-3">
  <% for(let listing of allListings) {%>
  <a href="/listings/<%=listing._id%>">
    <div class="card cardShow col">
      <img
        src="<%= listing.image.url %>"
        class="card-img-top cardImg"
        alt="Listing image"
        height="300px"
      />
      <div class="card-body">
        <h5 class="card-title"><%= listing.title %></h5>
        <h6 class="card-subtitle mb-2 text-body-secondary">
          &#8377; <%= listing.price.toLocaleString("en-IN") %> /night
          <span class="tax" style="color: orange; display: none">+ 17% GST</span>
        </h6>
      </div>
    </div>
  </a>
  <% } %>
</div>

<script>
  const toggleS = document.getElementById("switch");
  const taxInfo = document.getElementsByClassName("tax");

  toggleS.addEventListener("click", () => {
    for(info of taxInfo){
      if(info.style.display === "none") info.style.display = "inline";
      else info.style.display = "none";
    }
  });
</script>
